        "RuleNumber" : "100",
        "Protocol" : "6",
        "RuleAction" : "allow",
        "Egress" : "false",
        "CidrBlock" : "0.0.0.0/0",
        "PortRange" : { "From" : "80", "To" : "80" }
      }
    },

    "InboundHTTPSPublicNetworkAclEntry" : {
      "Type" : "AWS::EC2::NetworkAclEntry",
      "Properties" : {
        "NetworkAclId" : { "Ref" : "PublicNetworkAcl" },
        "RuleNumber" : "101",
        "Protocol" : "6",
        "RuleAction" : "allow",
        "Egress" : "false",
        "CidrBlock" : "0.0.0.0/0",
        "PortRange" : { "From" : "443", "To" : "443" }
      }
    },

    "InboundSSHPublicNetworkAclEntry" : {
      "Type" : "AWS::EC2::NetworkAclEntry",
      "Properties" : {
        "NetworkAclId" : { "Ref" : "PublicNetworkAcl" },
        "RuleNumber" : "102",
        "Protocol" : "6",
        "RuleAction" : "allow",
        "Egress" : "false",
        "CidrBlock" : { "Ref" : "SSHLocation" },
        "PortRange" : { "From" : "22", "To" : "22" }
      }
    },

    "InboundEphemeralPublicNetworkAclEntry" : {
      "Type" : "AWS::EC2::NetworkAclEntry",
      "Properties" : {
        "NetworkAclId" : { "Ref" : "PublicNetworkAcl" },
        "RuleNumber" : "103",
        "Protocol" : "6",
        "RuleAction" : "allow",
        "Egress" : "false",
        "CidrBlock" : "0.0.0.0/0",
        "PortRange" : { "From" : "1024", "To" : "65535" }
      }
    },

    "OutboundPublicNetworkAclEntry" : {
      "Type" : "AWS::EC2::NetworkAclEntry",
      "Properties" : {
        "NetworkAclId" : { "Ref" : "PublicNetworkAcl" },
        "RuleNumber" : "100",
        "Protocol" : "6",
        "RuleAction" : "allow",
        "Egress" : "true",
        "CidrBlock" : "0.0.0.0/0",
        "PortRange" : { "From" : "0", "To" : "65535" }
      }
    },

    "PublicSubnetNetworkAclAssociation" : {
      "Type" : "AWS::EC2::SubnetNetworkAclAssociation",
      "Properties" : {
        "SubnetId" : { "Ref" : "PublicSubnet" },
        "NetworkAclId" : { "Ref" : "PublicNetworkAcl" }
      }
    },

    "WebServerInstance" : {
      "Type" : "AWS::EC2::Instance",
      "DependsOn" : "GatewayToInternet",
      "Metadata": {
        "AWS::CloudFormation::Init": {
          "configSets": {
            "wordpress_install": [
              "install_cfn",
              "install_wordpress"

            ]
          },
          "install_cfn": {
            "files": {
              "/etc/cfn/cfn-hup.conf": {
                "content": {
                  "Fn::Join": [
                    "", [
                      "[main]\n",
                      "stack=",
                      {
                        "Ref": "AWS::StackId"
                      },
                      "\n",
                      "region=",
                      {
                        "Ref": "AWS::Region"
                      },
                      "\n"
                    ]
                  ]
                },
                "mode": "000400",
                "owner": "root",
                "group": "root"
              },
              "/etc/cfn/hooks.d/cfn-auto-reloader.conf": {
                "content": {
                  "Fn::Join": [
                    "", [
                      "[cfn-auto-reloader-hook]\n",
                      "triggers=post.update\n",
                      "action=/opt/aws/bin/cfn-init -v ",
                      "         --stack ",
                      {
                        "Ref": "AWS::StackName"
                      },
                      "         --configsets wordpress_install ",
                      "         --region ",
                      {
                        "Ref": "AWS::Region"
                      },
                      "\n"
                    ]
                  ]
                },
                "mode": "000400",
                "owner": "root",
                "group": "root"
              }
            },
            "services": {
              "sysvinit": {
                "cfn-hup": {
                  "enabled": "true",
                  "ensureRunning": "true",
                  "files": [
                    "/etc/cfn/cfn-hup.conf",
                    "/etc/cfn/hooks.d/cfn-auto-reloader.conf"
                  ]
                }
              }
            }
          },
          "install_wordpress": {
            "files": {
              "/etc/puppet/manifests/install_wp.pp": {
                "content": {
                  "Fn::Join": [
                    "", [
                      "class add_group {\n",
                      "group { 'wordpress':\n",
                      "ensure => 'present'\n",
                      "}\n",
                      "}\n",
                      "class add_user {\n",
                      "  user { 'wordpress':\n",
                      "    ensure => 'present',\n",
                      "    groups => 'wordpress'\n",
                      "  }\n",
                      "}\n",
                      "class install_wp::web {\n",
                      "  class { 'apache':\n",
                      "    docroot => '/var/www/html'\n",
                      " }\n",
                      "  class {'apache::mod::php': }\n",
                      "}\n",
                      "class install_wp::db {\n",
                      "  class { '::mysql::server':\n",
                      "    root_password => '", {
                        "Ref": "DBRootPassword"
                      }, "',\n",
                      "    remove_default_accounts => true\n",
                      "  }\n",
                      "  mysql::db { 'wordpress':\n",
                      "    user => 'wordpress',\n",
                      "    password => '", {
                        "Ref": "DBPassword"
                      }, "',\n",
                      "    host => 'localhost',\n",
                      "    grant => 'ALL'\n",
                      "  }\n",
                      "  class {'mysql::bindings':\n",
                      "    php_enable => true\n",
                      "  }\n",
                      "}\n",
                      "class install_wp::conf {\n",
                      " require add_group\n",
                      " require add_user\n",
                      " class { 'wordpress':\n",
                      "   wp_owner => 'wordpress',\n",
                      "   wp_group => 'wordpress',\n",
                      "   db_name => 'wordpress',\n",
                      "   db_user => 'wordpress',\n",
                      "   db_password => '", {
                        "Ref": "DBPassword"
                      }, "',\n",
                      "   create_db => false,\n",
                      "   create_db_user => false,\n",
                      "  install_dir => '/var/www/html/wordpress'\n",
                      "}\n",
                      "}\n",
                      "class install {\n",
                      "# Create wordpress user and group\n",
                      " class { 'add_group': }\n",
                      "class { 'add_user': }\n",
                      "# Install MySQL\n",
                      "class { 'install_wp::db': }\n",
                      "# Install Apache and PHP\n",
                      " class { 'install_wp::web': }\n",
                      "# Load all variables\n",
                      " class { 'install_wp::conf': }\n",
                      "}\n",
                      "class { 'install': }\n"
                    ]
                  ]
                },
                "mode": "000644",
                "owner": "root",
                "group": "root"
              }
            }
          }
        }

      },
      "Properties" : {
        "InstanceType" : { "Ref" : "EC2InstanceType" },
        "KeyName"  : { "Ref" : "KeyName" },
        "ImageId"  : { "Fn::FindInMap" : [ "AWSRegionArch2AMI", { "Ref" : "AWS::Region" },
                         { "Fn::FindInMap" : [ "AWSInstanceType2Arch", { "Ref" : "EC2InstanceType" }, "Arch" ] } ] },
        "NetworkInterfaces" : [{
          "GroupSet"                 : [{ "Ref" : "WebServerSecurityGroup" }],
          "AssociatePublicIpAddress" : "true",
          "DeviceIndex"              : "0",
          "DeleteOnTermination"      : "true",
          "SubnetId"                 : { "Ref" : "PublicSubnet" }
        }],
        "UserData": {
					"Fn::Base64": {
						"Fn::Join": [
							"", [
								"#!/bin/bash -x\n",
								"exec &> /home/ec2-user/userdata.log\n",


								"\n### install puppet and module\n",
								"yum -y install puppet3\n",
								"puppet module install puppetlabs-apache\n",
								"puppet module install puppetlabs-mysql\n",
								"puppet module install hunner-wordpress\n",

								"\n### install wordpress\n",
								"mkdir /etc/puppet/manifests\n",
								"\n# Install the files and packages from the metadata: install_wp.pp\n",
								"/opt/aws/bin/cfn-init -v ",
								"         --stack ", {
									"Ref": "AWS::StackName"
								},
								"         --resource WebServerInstance ",
								"         --configsets wordpress_install ",
								"         --region ", {
									"Ref": "AWS::Region"
								},
								"\n",

								"/usr/bin/puppet apply /etc/puppet/manifests/install_wp.pp\n"
							]
						]
					}
				}

      }
    },

    "WebServerSecurityGroup": {
			"Type": "AWS::EC2::SecurityGroup",
			"Properties": {
				"VpcId": {
					"Ref": "VPC"
				},
				"GroupDescription": "Enable HTTP access via port 80 and SSH access",
				"SecurityGroupIngress": [{
						"IpProtocol": "tcp",
						"FromPort": "80",
						"ToPort": "80",
						"CidrIp": "0.0.0.0/0"
					},
					{
						"IpProtocol": "tcp",
						"FromPort": "22",
						"ToPort": "22",
						"CidrIp": {
							"Ref": "SSHLocation"
						}
					},
					{
						"IpProtocol": "tcp",
						"FromPort": "443",
						"ToPort": "443",
						"CidrIp": "0.0.0.0/0"
					}
				]
			}
		}
  },

  "Outputs" : {
    "VPCId" : {
      "Description" : "VPCId of the newly created VPC",
      "Value" :  { "Ref" : "VPC" }
    },
    "PublicSubnet" : {
      "Description" : "SubnetId of the public subnet",
      "Value" :  { "Ref" : "PublicSubnet" }
    },
    "DNSName" : {
      "Description" : "DNS Name of the EC2 host",
      "Value" :  { "Fn::GetAtt" : ["WebServerInstance", "PublicDnsName"] }
    },
    "WebsiteURL" : {
     "Value" : { "Fn::Join" : ["", ["http://", { "Fn::GetAtt" : [ "WebServerInstance", "PublicDnsName" ]} ,"/wordpress"]]},
     "Description" : "Wordpress WebsiteURL"
   }
  }
}
